<h1>Listing posts</h1>

<%= link_to 'New post', new_post_path %>
	
<% @posts.each do |post| %>
	<table border=1 width="400px">
		<tr>
			<th><%= link_to post.title, post_path(post) %></th>
		</tr>
		<tr>
			<td><%= post.text %></td>
		</tr>
		<tr>
			<td>Author: <%= post.author %></td>
		</tr>
		<tr>
			<td><%= link_to 'Show', post_path(post) %>
			<%= link_to 'Edit', edit_post_path(post) %>
			<%= link_to 'Destroy', post_path(post),
				method: :delete, data: { confirm: 'Are you
				sure?' } %></td>
		</tr>
	</table><br />
<% end %>
